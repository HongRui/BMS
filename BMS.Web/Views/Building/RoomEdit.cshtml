@model OUDAL.Room

@{
   
    Layout = "~/Views/Shared/_InfoLayout.cshtml";
}
    
<script type="text/javascript">
    jQuery(document).ready(function () {   
    $( ".datepicker" ).datepicker({changeMonth: true,changeYear: true,showButtonPanel: true,showOtherMonths: true,selectOtherMonths: true});
   
}); 
</script>
<div style="width:500px;margin:0px auto">
@using (Html.BeginForm() ){
    @Html.ValidationSummary(true)
    @Html.HiddenFor(model => model.Id)
    <fieldset>
        <legend>房屋信息</legend>
        <div class="editor-label">
            @Html.MyDisplayFor(model => model.BuildingId," : "+Building.GetName(Model.BuildingId))
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.Name)
        </div>
        <div class="editor-field">
            @Html.EditorFor(model => model.Name)
            @Html.ValidationMessageFor(model => model.Name)
        </div>
        <div class="editor-label">
            @Html.LabelFor(model => model.OwnnerType)
        </div>
        <div class="editor-field">
           @Html.MyEnumFor(model => model.OwnnerType,typeof(OwnnerTypeEnum),false)
            @Html.ValidationMessageFor(model => model.OwnnerType)
        </div> 
         <div class="editor-label">
            @Html.LabelFor(model => model.RoomType)
        </div>
        <div class="editor-field">
           @Html.MyEnumFor(model => model.RoomType,typeof(RoomTypeEnum),false)
            @Html.ValidationMessageFor(model => model.RoomType)
        </div> 
         <div class="editor-label">
            @Html.LabelFor(model => model.Dim)
        </div>
        <div class="editor-field">
           @Html.EditorFor(model => model.Dim)
            @Html.ValidationMessageFor(model => model.Dim)
        </div> 
        <div class="editor-label">
            @Html.LabelFor(model => model.RentDim)
        </div>
        <div class="editor-field">
           @Html.EditorFor(model => model.RentDim)
            @Html.ValidationMessageFor(model => model.RentDim)
        </div> 
        <div class="editor-label">
            @Html.LabelFor(model => model.Remark)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(model => model.Remark,3,10,null)

            @Html.ValidationMessageFor(model => model.Remark)
        </div>
                    
    </fieldset>
    <p>@MyControls.SubmitBtn("保存") @MyControls.Btn("取消","window.close()")</p>
}
</div>

