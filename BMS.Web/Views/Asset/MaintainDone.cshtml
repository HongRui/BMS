@model OUDAL.AssetMaintain
@using BMS.Web
@using BMS.Web.BLL
@using OUDAL
@{
    ViewBag.Title = "设施设备养护、保养计划";
    Layout = "~/Views/Shared/_SmallLayout.cshtml";
}

<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>

@section Main{
<div style="width:500px;margin:0px auto">

@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>设施设备养护、保养计划</legend>
         @Html.HiddenFor(model => model.Id)
        
        <div class="editor-label">
            @Html.LabelFor(model => model.DoneDate)
        </div>
        <div class="editor-field">
            @Html.MyDateFor(m => m.DoneDate, false)
            @Html.ValidationMessageFor(model => model.DoneDate)
        </div> 
        <div class="editor-label">
            @Html.LabelFor(model => model.DoneDetail)
        </div>
        <div class="editor-field">
            @Html.TextAreaFor(m => m.DoneDetail, false)
            @Html.ValidationMessageFor(model => model.DoneDetail)
        </div>        
        
        <p>
            <input type="submit" value="确定" />
            
        </p>
    </fieldset>
<script type="text/javascript">
    
    $(document).ready(function () {
        $(".datepicker").datepicker({ changeMonth: true, changeYear: true, showButtonPanel: true, showOtherMonths: true, selectOtherMonths: true });
    });
</script>        
}
