@model OUDAL.AssetUser
@using Mall
@using BMS.Web
@using BMS.Web.BLL
@using OUDAL
@{
    ViewBag.Title = "设施设备";
    Layout = "~/Views/Shared/_SmallLayout.cshtml";
    var user = new SystemUser();
    if(Model.UserId!=null){user= UserBLL.GetById((int)Model.UserId);}
}
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
<div style="width:500px;margin:0px auto">
@section Main{


@using (Html.BeginForm())
{
    @Html.ValidationSummary(true)
    <fieldset>
        <legend>设备归还</legend>
         @Html.HiddenFor(model => model.Id)
         <div class="editor-label">
            <span>设备信息: @ViewBag.asset.Name @ViewBag.asset.AssetNo </span>
        </div>
        <div class="editor-label">
             <span>使用人: @user.Name </span>
        </div>
        
        <div class="editor-label">
            @Html.LabelFor(model => model.EndDate)
        </div>
        <div class="editor-field">
            @Html.MyDateFor(m => m.EndDate, false)
            @Html.ValidationMessageFor(model => model.EndDate)
        </div>  
        
        <p>
            <input type="submit" value="确定" />
           
        </p>
    </fieldset>
}
</div>
<script type="text/javascript">
    $(document).ready(function () {
        $(".datepicker").datepicker({ changeMonth: true, changeYear: true, showButtonPanel: true, showOtherMonths: true, selectOtherMonths: true });
    });
</script> 